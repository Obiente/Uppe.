---
export interface Props {
  id?: string;
  checked?: boolean;
  value?: string;
  required?: boolean;
  disabled?: boolean;
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  [key: string]: any;
}

const { 
  id,
  checked = false,
  value,
  required = false,
  disabled = false,
  size = 'md',
  class: className = '',
  ...rest
} = Astro.props;

// Base checkbox classes with modern styling
const baseClasses = "rounded-lg border-2 border-primary bg-bg-secondary text-interactive-primary focus:ring-2 focus:ring-interactive-primary focus:ring-offset-2 focus:ring-offset-bg-primary transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed";

// Size classes
const sizeClasses = {
  sm: "w-4 h-4",
  md: "w-5 h-5",
  lg: "w-6 h-6"
};

const classes = `${baseClasses} ${sizeClasses[size]} ${className}`;
---

<input 
  type="checkbox"
  id={id}
  checked={checked}
  value={value}
  required={required}
  disabled={disabled}
  class={classes}
  {...rest}
/>
