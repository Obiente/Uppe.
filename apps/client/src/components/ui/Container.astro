---
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  padding?: 'sm' | 'md' | 'lg' | 'xl';
  paddingY?: 'sm' | 'md' | 'lg' | 'xl';
  children?: any;
  [key: string]: any;
}

const { class: className = '', size = 'xl', padding = 'md', paddingY = 'md', children } = Astro.props;

// Size classes
const sizeClasses = {
  sm: 'max-w-3xl',
  md: 'max-w-5xl',
  lg: 'max-w-6xl',
  xl: 'max-w-7xl',
  full: 'max-w-full'
};

// Horizontal padding classes
const paddingClasses = {
  sm: 'px-4 sm:px-6',
  md: 'px-4 sm:px-6 lg:px-8',
  lg: 'px-6 sm:px-8 lg:px-12',
  xl: 'px-8 sm:px-12 lg:px-16'
};

// Vertical padding classes
const paddingYClasses = {
  sm: 'py-8',
  md: 'py-12',
  lg: 'py-16',
  xl: 'py-20'
};

const containerClasses = `${sizeClasses[size]} mx-auto ${paddingClasses[padding]} ${paddingYClasses[paddingY]} ${className}`;
---

<div class={containerClasses}>
  <slot>{children}</slot>
</div>
