---
export interface Props {
  class?: string;
  spacing?: 'sm' | 'md' | 'lg';
  [key: string]: any;
}

const { class: className = '', spacing = 'md', ...rest } = Astro.props;

// Spacing classes
const spacingClasses = {
  sm: 'space-y-2',
  md: 'space-y-4',
  lg: 'space-y-6'
};

const formGroupClasses = `${spacingClasses[spacing]} ${className}`;
---

<div class={formGroupClasses} {...rest}>
  <slot />
</div>
