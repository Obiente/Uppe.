---
interface Props {
  interactive?: boolean;
  children?: any;
  className?: string;
}

const { interactive = true, children, className = '' } = Astro.props;
---

<div class={`relative w-full h-96 bg-surface-primary rounded-lg overflow-hidden ${className}`}>
  <div class="absolute inset-0 flex items-center justify-center">
    <div class={`relative w-80 h-80 ${interactive ? 'globe-interactive' : ''}`} id="globe-container">
      <slot>{children}</slot>
    </div>
  </div>
</div>
