---
export interface Props {
  variant?: 'primary' | 'secondary' | 'success' | 'warning' | 'error';
  size?: 'sm' | 'md' | 'lg' | 'xl';
  className?: string;
}

const {
  variant = 'primary',
  size = 'md',
  className = ''
} = Astro.props;

const variantClasses = {
  primary: 'bg-gradient-to-br from-accent-primary to-accent-primary/80 text-white shadow-lg',
  secondary: 'bg-gradient-to-br from-accent-secondary to-accent-secondary/80 text-white shadow-lg',
  success: 'bg-gradient-to-br from-status-success to-status-success/80 text-white shadow-lg',
  warning: 'bg-gradient-to-br from-status-warning to-status-warning/80 text-white shadow-lg',
  error: 'bg-gradient-to-br from-status-error to-status-error/80 text-white shadow-lg'
};

const sizeClasses = {
  sm: 'w-10 h-10 p-1.5',
  md: 'w-12 h-12 p-2',
  lg: 'w-16 h-16 p-3',
  xl: 'w-20 h-20 p-4'
};

const classes = [
  'rounded-full flex items-center justify-center',
  variantClasses[variant],
  sizeClasses[size],
  className
].filter(Boolean).join(' ');
---

<div class={classes}>
  <slot />
</div>
