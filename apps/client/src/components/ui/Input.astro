---
export interface Props {
  type?: 'text' | 'email' | 'password' | 'number' | 'url' | 'tel' | 'search';
  placeholder?: string;
  value?: string | number;
  required?: boolean;
  disabled?: boolean;
  size?: 'sm' | 'md' | 'lg';
  variant?: 'default' | 'outlined' | 'filled';
  class?: string;
  [key: string]: any;
}

const { 
  type = 'text',
  placeholder,
  value,
  required = false,
  disabled = false,
  size = 'md',
  variant = 'default',
  class: className = '',
  ...rest
} = Astro.props;

// Base input classes with modern styling
const baseClasses = "w-full rounded-xl border transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-bg-primary disabled:opacity-50 disabled:cursor-not-allowed placeholder:text-tertiary";

// Variant classes
const variantClasses = {
  default: "bg-bg-secondary border-border-subtle text-primary focus:border-border-focus focus:ring-border-focus hover:border-border-secondary",
  outlined: "bg-transparent border-2 border-border-primary text-primary focus:border-interactive-primary focus:ring-interactive-primary",
  filled: "bg-bg-elevated border-transparent text-primary focus:border-border-focus focus:ring-border-focus"
};

// Size classes
const sizeClasses = {
  sm: "px-3 py-2 text-sm",
  md: "px-4 py-3 text-base",
  lg: "px-5 py-4 text-lg"
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
---

<input 
  type={type}
  placeholder={placeholder}
  value={value}
  required={required}
  disabled={disabled}
  class={classes}
  {...rest}
/>
