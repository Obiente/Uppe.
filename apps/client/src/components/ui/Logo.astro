---
import Icon from "./Icon.astro";

interface Props {
  title?: string;
  size?: "sm" | "md" | "lg";
  variant?: "default" | "gradient" | "minimal";
  className?: string;
}

const {
  title = "Uppe.",
  size = "md",
  variant = "default",
  className = "",
} = Astro.props;

const sizeConfig = {
  sm: { logo: "w-6 h-6", text: "text-lg", gap: "gap-2" },
  md: { logo: "w-8 h-8", text: "text-xl", gap: "gap-2" },
  lg: { logo: "w-10 h-10", text: "text-2xl", gap: "gap-3" },
};

const variantClasses = {
  default: {
    container: "text-primary hover:text-interactive-primary",
    icon: "text-accent-secondary",
    text: "font-bold",
  },
  gradient: {
    container: "hover:scale-105",
    icon: "text-interactive-primary",
    text: "font-bold text-primary",
  },
  minimal: {
    container: "text-primary hover:text-secondary",
    icon: "text-primary",
    text: "font-medium",
  },
};
//TODO: better styled variants
const config = sizeConfig[size];
const style = variantClasses[variant];

const classes = `inline-flex items-center ${config.gap} transition-all duration-200 ${style.container} ${className}`;
---

<a href="/" class={classes}>
  <div
    class={`bg-accent-secondary w-12 h-12 p-2 rounded-xl shadow-lg flex items-center justify-center`}
  >
    <Icon icon="TRENDING_UP" class={`w-6 h-6 text-inverse`} />
  </div>
  <span class={`${config.text} ${style.text}`}>{title}</span>
</a>
