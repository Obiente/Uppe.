---
import StatusIndicator from './StatusIndicator.astro';

interface Props {
  peerId: string;
  location: string;
  checksPerDay: number;
  status: 'online' | 'offline' | 'warning' | 'error';
  className?: string;
}

const { peerId, location, checksPerDay, status, className = '' } = Astro.props;
---

<div class={`flex items-center justify-between p-3 bg-surface-elevated rounded-lg ${className}`}>
  <div class="flex items-center gap-3">
    <StatusIndicator status={status} />
    <div>
      <div class="text-primary font-medium">{peerId}</div>
      <div class="text-secondary text-sm">{location}</div>
    </div>
  </div>
  <div class="text-right">
    <div class="text-primary font-medium">{checksPerDay.toLocaleString()}</div>
    <div class="text-secondary text-sm">checks/day</div>
  </div>
</div>
