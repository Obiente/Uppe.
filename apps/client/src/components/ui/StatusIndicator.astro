---
import Icon  from './Icon.astro';
import { ICONS } from '../../lib/design-system/icons';

interface Props {
  status: 'online' | 'offline' | 'warning' | 'error' | 'unknown';
  label?: string;
  size?: 'sm' | 'md' | 'lg';
  animated?: boolean;
  variant?: 'dot' | 'badge' | 'icon';
  class?: string;
}

const { status, label, size = 'sm', animated = false, variant = 'dot', class: className = '' } = Astro.props;

// Size classes
const sizeClasses = {
  sm: { dot: 'w-2 h-2', text: 'text-xs', container: 'gap-1.5', icon: 'w-3 h-3' },
  md: { dot: 'w-3 h-3', text: 'text-sm', container: 'gap-2', icon: 'w-4 h-4' },
  lg: { dot: 'w-4 h-4', text: 'text-base', container: 'gap-2.5', icon: 'w-5 h-5' }
};

//   status configurations
const statusConfig = {
  online: { 
    color: 'bg-status-success', 
    textColor: 'text-status-success',
    icon: 'CONFIRM' as const
  },
  offline: { 
    color: 'bg-status-error', 
    textColor: 'text-status-error',
    icon: 'CLOSE' as const
  },
  warning: { 
    color: 'bg-status-warning', 
    textColor: 'text-status-warning',
    icon: 'WARNING' as const
  },
  error: { 
    color: 'bg-status-error', 
    textColor: 'text-status-error',
    icon: 'CLOSE' as const
  },
  unknown: { 
    color: 'bg-text-tertiary', 
    textColor: 'text-tertiary',
    icon: 'HELP' as const
  }
};

const config = statusConfig[status];
const sizeConfig = sizeClasses[size];
---

<div class={`flex items-center ${sizeConfig.container} ${sizeConfig.text} ${className}`}>
  {variant === 'dot' && (
    <div class={`${sizeConfig.dot} rounded-full ${config.color} ${animated && status === 'online' ? 'animate-pulse' : ''}`}></div>
  )}
  {variant === 'icon' && (
    <Icon icon={config.icon} class={config.textColor} />
  )}
  {variant === 'badge' && (
    <div class={`${sizeConfig.dot} rounded-full ${config.color} ${animated ? 'animate-pulse' : ''} shadow-lg`}></div>
  )}
  {label && <span class={config.textColor}>{label}</span>}
</div>
