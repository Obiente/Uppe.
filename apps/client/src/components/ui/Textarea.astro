---
export interface Props {
  placeholder?: string;
  value?: string;
  rows?: number;
  required?: boolean;
  disabled?: boolean;
  size?: 'sm' | 'md' | 'lg';
  variant?: 'default' | 'outlined' | 'filled';
  class?: string;
  [key: string]: any;
}

const { 
  placeholder,
  value,
  rows = 3,
  required = false,
  disabled = false,
  size = 'md',
  variant = 'default',
  class: className = '',
  ...rest
} = Astro.props;

// Base textarea classes with modern styling
const baseClasses = "w-full rounded-xl border transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-bg-primary disabled:opacity-50 disabled:cursor-not-allowed placeholder:text-tertiary resize-y";

// Variant classes
const variantClasses = {
  default: "bg-secondary border-primary text-primary focus:border-focus focus:ring-border-focus hover:border-secondary",
  outlined: "bg-transparent border-2 border-primary text-primary focus:border-interactive-primary focus:ring-interactive-primary",
  filled: "bg-elevated border-transparent text-primary focus:border-focus focus:ring-border-focus"
};

// Size classes
const sizeClasses = {
  sm: "px-3 py-2 text-sm",
  md: "px-4 py-3 text-base",
  lg: "px-5 py-4 text-lg"
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
---

<textarea 
  placeholder={placeholder}
  value={value}
  rows={rows}
  required={required}
  disabled={disabled}
  class={classes}
  {...rest}
>{value}</textarea>
