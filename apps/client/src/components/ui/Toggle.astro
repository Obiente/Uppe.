---
import Heading from "./Heading.astro";
import Paragraph from "./Paragraph.astro";
import ToggleSwitch from "./ToggleSwitch.astro";

export interface Props {
  label: string;
  description?: string;
  checked?: boolean;
  name?: string;
  id: string;
  size?: "sm" | "md" | "lg";
  className?: string;
}

const {
  label,
  description,
  checked = false,
  name,
  id,
  size = "md",
  className = "",
} = Astro.props;
---

<div class={`flex items-center justify-between ${className}`}>
  <div>
    <Heading>{label}</Heading>
    {description && <Paragraph color="secondary">{description}</Paragraph>}
  </div>
  <ToggleSwitch
    checked={checked}
    name={name ?? id}
    id={id}
    size={size}
  />
</div>
