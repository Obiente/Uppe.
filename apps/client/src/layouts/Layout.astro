---
import '../styles/global.css';
import { getThemeCSS } from '../lib/theme-init';

interface Props {
	title?: string;
	description?: string;
}

const { title = "Uppe.", description = "Decentralized P2P Uptime Monitoring" } = Astro.props;

const themeCSS = getThemeCSS();
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		
		<!-- 
			Server-side rendered theme CSS 
			This prevents FOUC (Flash of Unstyled Content) and ensures consistent initial rendering
		-->
		<style set:html={themeCSS}></style>
	</head>
	<body class="bg-primary min-h-screen">
		<slot />
		<!-- <script>
		
			import { initTheme } from '../lib/theme-client';
			document.addEventListener('astro:page-load', () => {
				initTheme();
			});
		</script> -->
	</body>
</html>
