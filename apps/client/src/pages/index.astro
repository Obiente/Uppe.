---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/landing/Hero.astro';
import Features from '../components/landing/Features.astro';
import Benefits from '../components/landing/Benefits.astro';
import Community from '../components/landing/Community.astro';
import CTA from '../components/landing/CTA.astro';
import Footer from '../components/landing/Footer.astro';

// Mock network stats for demonstration
const networkStats = {
  totalPeers: 1847,
  onlinePeers: 1623,
  checksPerHour: "2.4M",
  coverage: "99.7%"
};

const benefits = [
  {
    title: "Your Node, Your Rules",
    description: "Run monitoring checks for others while getting coverage for your own services. It's mutual aid for the internet."
  },
  {
    title: "No Blind Spots",
    description: "Traditional monitoring misses regional outages. Our distributed network catches what centralized systems can't."
  },
  {
    title: "Privacy First",
    description: "You monitor what you care about. No centralized analytics, no data harvesting, no hidden agendas."
  }
];
---

<Layout 
  title="uppe. - Uptime by everyone. For everyone." 
  description="Community-driven, decentralized uptime monitoring. No single points of failure. No gatekeepers. Just pure uptime, powered by people."
>
  <Hero networkStats={networkStats} />
  <Features />
  <Benefits benefits={benefits} />
  <Community />
  <CTA />
  <Footer />
</Layout>
